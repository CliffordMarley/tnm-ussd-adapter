{
    "name": "tnmdev/ussd",
    "description": "USSD Adaptor for Laravel PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Saul Chelewani",
            "email": "saulchelewani@gmail.com"
        },
        {
            "name": "TNM Developers",
            "email": "developers@tnm.co.mw"
        }
    ],
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "dev",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-simplexml": "*",
        "tnmdev/ussd-simulator": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "orchestra/testbench": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "TNM\\USSD\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TNM\\USSD\\Test\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "TNM\\USSD\\UssdServiceProvider"
            ]
        }
    }
}
